
{
    "manifest_version": 2,
    "name": "Input Logger",
    "version": "1.0",
    "description": "A simple Chrome extension to log user input to the console.",
    "permissions": ["activeTab"],
    "browser_action": {
      "default_title": "Input Logger",
      "default_popup": "popup.html"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  